html, body
	min-height: 100%
	height: 100%

html
	-ms-text-size-adjust: 100%
	-webkit-text-size-adjust: 100%
	@media (max-width: 767.98px)
		font-size: 12px
	@media (min-width: 768px) and (max-width: 991.98px)
		font-size: 13px
	@media (min-width: 992px) and (max-width: 1199.98px)
		font-size: 14px
	@media (min-width: 1200px)
		font-size: 16px

body
	--background: #202020
	display: flex
	flex-direction: column
	align-items: center
	text-align: center
	overflow: hidden
	margin: 0
	width: 100%
	background: #202020
	color: #fafafa
	&.loading
		*
			transition: none !important

h1, h2, h3, h4, h5, h6, p
	margin: 0

header
	flex: none
	height: 6rem
	#progress
		display: flex
		justify-content: center
	p + p
		margin-left: 1ch

#game
	--last_cycle_color: var(--background)
	width: 100%
	position: relative
	flex: 1 0 auto
	--game_size: 27rem
	&::before
	&::after
		position: absolute
		content: ''
		left: 50%
		top: 50%
		width: var(--game_size)
		height: var(--game_size)
		border: 3px solid rgba(white, 0.3)
		border-radius: 50%
		transform: translate(-50%, -50%)
	&::before
		background: var(--last_cycle_color)
	#button
		display: grid
		z-index: 1
		place-items: center
		position: absolute
		left: 50%
		top: 50%
		transform: translate(-50%, -50%)
		background: #EAEAEA
		color: #202020
		border-radius: 50%
		$size = 7rem
		font-size: 2rem
		width: $size
		height: $size
		user-select: none
		cursor: pointer
		box-shadow: 0 0 1.5rem rgba(0, 0, 0, 0.4)
		&:hover
			background: #EACCCC

// NOTE(bret): Thanks https://css-tricks.com/css-pie-timer/
#cycle
	--rotation: "0deg" % ""
	--cycleBackground: transparent
	position: relative
	width: var(--game_size)
	height: var(--game_size)
	left: 50%
	top: 50%
	transform: translate(-50%, -50%)
	.half
		--radius: calc(var(--game_size) / 2)
		position: absolute
		width: 100%
		height: 50%
		background: var(--cycleBackground)
		// border: 10px solid rgba(0, 0, 0, 0.4)
		box-sizing: border-box
		&.spinner
			// height: calc(50%)
			border-radius: var(--radius) var(--radius) 0 0
			transform: rotate(calc(var(--rotation) - 180deg))
			transform-origin: bottom center
		&.filler
			border-radius: var(--radius) var(--radius) 0 0
			opacity: 0
			// background: red
			// background: radial-gradient(circle at left, red 0, blue, green 100%)
	.mask
		--radius: calc(var(--game_size) / 2)
		width: 100%
		height: 50%
		top: 50%
		position: absolute
		z-index: 10
		opacity: 1
		background: var(--last_cycle_color)
		border-radius: 0 0 var(--radius) var(--radius)


.station
#cursor
	position: absolute
	left: 50%
	top: 50%
	width: calc(var(--game_size) * 0.15)
	height: calc(var(--game_size) * 0.15)
	border-radius: 50%
	transform: translate(-50%, -50%) rotate(calc(1 * var(--rotation))) translate(calc(-0.5 * var(--game_size)))
	transition: 0.4s transform ease-in-out, 0.2s background 0.1s

.station
	background: hsl(0, 100%, 100%)
	z-index: 3
	box-shadow: 0.4rem 0px 0.3rem rgba(0, 0, 0, 0.2)

#cursor
	--rotation: "0deg" % ""
	border: 3px solid white
	z-index: 4

footer
	display: flex
	justify-content: center
	flex: none
	height: 3rem
	a
		margin-left: 0.5ch
