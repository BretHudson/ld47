html, body
	min-height: 100%
	height: 100%

html
	-ms-text-size-adjust: 100%
	-webkit-text-size-adjust: 100%
	@media (max-width: 767.98px)
		font-size: 12px
	@media (min-width: 768px) and (max-width: 991.98px)
		font-size: 13px
	@media (min-width: 992px) and (max-width: 1199.98px)
		font-size: 14px
	@media (min-width: 1200px)
		font-size: 16px

body
	display: flex
	flex-direction: column
	align-items: center
	text-align: center
	margin: 0
	width: 100%
	background: #202020
	color: #fafafa

h1, h2, h3, h4, h5, h6, p
	margin: 0

header
	flex: none
	height: 6rem
	#progress
		display: flex
		justify-content: center
	p + p
		margin-left: 1ch

#game
	position: relative
	flex: 1 0 auto
	&::after
		position: absolute
		content: ''
		left: 50%
		top: 50%
		width: 500px
		height: 500px
		border: 3px solid rgba(white, 0.3)
		border-radius: 50%
		transform: translate(-50%, -50%)
	#button
		display: grid
		place-items: center
		position: absolute
		left: 50%
		top: 50%
		transform: translate(-50%, -50%)
		background: #EAEAEA
		color: #202020
		border-radius: 50%
		$size = 4rem
		width: $size
		height: $size

.station
	width: 100px
	height: 100px
	background: cyan
	border-radius: 50%

footer
	display: flex
	justify-content: center
	flex: none
	height: 3rem
	a
		margin-left: 0.5ch
